- var site_url = 'https://viralworks.com';
- var background_url = 'https://viralworks.com/assets/img/bg/waves_email_header.png';
- var facebook_link = 'https://www.facebook.com/ViralWorksPlatform/';
- var linkedin_link = 'https://www.linkedin.com/company/viralworks-platform/';
- var icon_facebook = 'https://viralworks.com/assets/img/icons/fb_white_circle_icon.png';
- var icon_linkedin = 'https://viralworks.com/assets/img/icons/in_white_circle_icon.png';
- var icon_viralworks = 'https://viralworks.com/assets/img/logo/logo_white_full.png';
- var mail_support = 'support@viralworks.com';
- var phone = '(+84) 901 434 147';
- var address = 'G-07, Ground Floor, The Manor 2, 91 Nguyen Huu Canh St., Ward 22, Binh Thanh District, HCMC';

html(lang='en')
  include header.pug
  body(style='\
  font-family: Helvetica Neue,Helvetica,Arial,sans-serif;\
  line-height: 21px;\
  font-size: 14px;\
  color: #474747;\
  margin: 0;\
  background-color: #E5E5E5;')
    div(style='\
    display:block!important;\
    max-width:685px!important;\
    margin:0 auto!important; /* makes it centered */\
    clear:both!important;\
    background-color: #ffffff;')
      // HEADER
      table(style="width: 100%; background: url("+background_url+") no-repeat right top; height: 210px;")
        tbody
          tr
            td
            td(style='height: 206px')
              div(style='\
              max-width: 430px;\
              margin: 0 auto;\
              height: 100%;\
              padding-top: 40px')
                table
                  tbody
                    tr
                      td
                        a(href=site_url, target='_blank')
                          img(style='\
                          width: 142px;\
                          height: 44px;\
                          text-decoration: none', src=icon_viralworks)
                      td(style='width: 100%;text-align: right;')
                        a(style='text-decoration: none', href=facebook_link, target='_blank')
                          img(src=icon_facebook)
                        a(style='text-decoration: none; margin-left: 18px', href=linkedin_link, target='_blank')
                          img(src=icon_linkedin)
              // /content
            td
      // /HEADER
      block body
      // FOOTER
      table(style='width: 100%;font-size: 12px')
        tbody
          tr
            td
            td.container
              // content
              div(style='color: #683C97;')
                table(style='width: 100%;')
                  tbody
                    tr
                      td(style='text-align: center')
                        p
                          span #{mail_support}
                          span  
                          span #{phone}
                        p
                          span
                            a(href=site_url, target='_blank', style='text-decoration: none') viralworks.com
                            |  | Â© 2018 ViralWorks Ltd., All rights reserved
                        p
                          span
                            | #{address}
              // /content
            td
      // /FOOTER
